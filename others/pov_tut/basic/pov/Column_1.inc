#version 3.6;
//--------------------------------------------------------------------///////////////////   
//------------------------------------------------------------------- macro Column_1(...) 
#macro Column_1( H_C,  // column height
                 R_B,  // base radius
                 R_min,// border radius
                 T_S,  // top scale
               ) //-------------------------------
//------------------------------------------------
union{
 cone{ <0,0,0>,R_B,<0,H_C,0>,R_B*T_S}
 torus{ R_B,R_min translate<0,R_min,0>}
 torus{ R_B*T_S,R_min*T_S
        translate<0,H_C-R_min*T_S,0>}
 }// end Column
// --------------------------------------------------------------------------------------
#end// of macro ------------------------------------------------------///// end of macro
//--------------------------------------------------------------------///////////////////  




